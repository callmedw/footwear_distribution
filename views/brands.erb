<div class="page_header">
  <h1>Brands</h1>
</div>

<div class="page_content">
  <% if @brands.any? %>
  <ul>
    <% @brands.each do |brand| %>
      <li><a href = "/brand/<%= brand.id %>"><%= brand.name %></a></li>
    <% end %>
  </ul>
  <h4>Click a brand to edit or see associated stores</h4>
  <%else %>
  <p> You don't have any brands!! </p>
  <% end %>

  <form action="/brands" method="post">
    <label for="name">Enter brand name here:</label>
    <input type="text" name="name">

    <button type="submit">Add Brand</button>
  </form>



</div>
<div class="page_nav">
  <a href="/brands">See brands</a>
  <a href="/stores">See Stores</a>
  <a href="/">Home</a>
</div>
