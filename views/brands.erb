<% if @brands.any? %>

<h2>Your brands:</h2>

<ul>
  <% @brands.each do |brand| %>
    <li><a href = "/brand/<%= brand.id %>"><%= brand.name %></a></li>
  <% end %>
</ul>
<h4>Click a brand to edit or see associated stores</h4>

<%else %>


<p> You don't have any brands!! </p>
<% end %>
<a href="/brands/new">Add Brand</a>
